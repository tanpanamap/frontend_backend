<style>
    *{
    margin: 0;
    padding: 0;
    font-family: sans-serif;
}


.navrapper{
    display: flex;
    justify-content: space-between;
    background-color: white;
    position: fixed;
    width: 100%;
    top: 0;
    font-size: 1.2em;
    font-weight: 700;
    height: 60px;
    z-index: 1;
}

section{
    height: 100vh;
    width: 100%;
    display: flex;
}

.lg-logo{
    margin-top: 20px;
    margin-left:  100px;
}

.lg-logo img{
    width: 100px;
    height: 20px;
}


.nav{
    margin: 0 100px;
}

.nav-ul{
    display: flex;
}

.nav-li{
    margin: 20px;
    list-style: none;
}

.nav-li a{
    text-decoration: none;
    color:black;
}

.container{
    margin: 20vh;
    max-width: 30%;
}

.container h1{
    font-size: 2em;
}

.container p{
    margin-top: 20px;
    max-width: 400px;
    font-size: 1.2rem;

}

